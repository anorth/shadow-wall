<Window x:Class="ShadowWall.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShadowWall"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000" MinHeight="440" MinWidth="190">
    <Grid x:Name="KinectGrid" Background="Black">
        <Canvas x:Name="KinectCanvas" HorizontalAlignment="Left" Height="{Binding ElementName=KinectGrid, Path=ActualHeight}" Margin="0,0,0,0" VerticalAlignment="Top" Width="{Binding ElementName=KinectGrid, Path=ActualWidth}"/>
        <Image x:Name="ColorImage" HorizontalAlignment="Left" Height="123" Margin="10,10,0,0" VerticalAlignment="Top" Width="148"/>
        <Image x:Name="DepthImage" HorizontalAlignment="Left" Height="123" Margin="10,138,0,0" VerticalAlignment="Top" Width="148"/>
        <Image x:Name="InfraredImage" HorizontalAlignment="Left" Height="123" Margin="10,266,0,0" VerticalAlignment="Top" Width="148"/>
    </Grid>
</Window>
